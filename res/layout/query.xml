<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:weightSum="1"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/state_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select State/Territory"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textSize="18dip"
         />
	<Spinner
	    android:id="@+id/spinner3"
		android:layout_width="match_parent"
        android:layout_height="wrap_content"
   	    android:drawSelectorOnTop="true"
	    android:prompt="@+string/planet_prompt3"
	    android:layout_marginLeft="35dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="10dp"
	     />
	<TextView
        android:id="@+id/fellowship_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Fellowship" 
		android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"

        android:textSize="18dip"/>
	
        <Spinner
            android:id="@+id/spinner4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

            android:drawSelectorOnTop="true"
            android:prompt="@string/planet_prompt4"
            	    android:layout_marginLeft="35dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="10dp" />
        
        <!-- 
         -->
        <TextView
        android:id="@+id/day_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Day" 
        		android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"

        android:textSize="18dip"/>
        <Spinner
            android:id="@+id/spinner"
       		android:layout_width="match_parent"
	        android:layout_height="wrap_content"

            android:drawSelectorOnTop="true"
            android:prompt="@string/planet_prompt"
            	    android:layout_marginLeft="35dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="10dp" />
	<!--  
-->
<TextView
        android:id="@+id/time_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Time" 
        		android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp"
        android:textSize="18dip"/>

	<Spinner
	    android:id="@+id/spinner2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:drawSelectorOnTop="true"
	    android:prompt="@string/planet_prompt2" 
            	    android:layout_marginLeft="35dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="10dp"/>

	<!-- 
	 -->

	
	<!--  -->
<!--  android:background="#333333"
	    android:textColor="#FFFFFF" android:drawablePadding="10dip"-->
	<Button
	    android:id="@+id/go_button"
	    android:layout_width="125dip"
	    android:layout_height="wrap_content"
	    android:text=" Find Meetings" 
		android:drawableTop="@drawable/dark_action_search"
		android:textColor="#DDDDDD"   
	    android:background="#000000"
		android:drawablePadding="10dip"
	    android:textSize="18dip"
	    android:layout_marginBottom="15dip"
	    android:layout_marginTop="40dip"
	    android:layout_gravity="center"
	    android:gravity="left"/>

</LinearLayout>
</ScrollView>