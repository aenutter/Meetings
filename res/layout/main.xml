<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

	<FrameLayout
	    android:id="@+id/frameLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:gravity="center_vertical|center_horizontal">
	    
		<ImageView
		        
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:padding="15dip"
		        android:minWidth="500dp"
		        android:src="@drawable/icon" 
		        android:layout_margin="15dip" />
	</FrameLayout>
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    >
<!--android:background="#333333" android:textColor="#FFFFFF"-->

   	<Button
   	    android:layout_below="@+id/mapButton"
   	    android:id="@+id/editDeleteButton"
   	    android:layout_width="150dip"
	    android:layout_height="wrap_content"
	    android:focusable="true"
	    android:drawableTop="@drawable/dark_content_edit"
	    android:text="Edit Meetings"
   	    android:textSize="18dip"
   	    android:textColor="#DDDDDD"   
	    android:background="#000000"
	    android:drawablePadding="10dp"
	    android:paddingTop="75dip"
	    	  	android:layout_gravity="right"
	    	  	
	    android:layout_marginBottom="15dip"

	    android:layout_marginLeft="15dip"
	    
   	/>

   	<Button
   	    android:id="@+id/mapButton"
   	    android:layout_width="150dip"
   	    android:layout_height="wrap_content"
   	    android:layout_alignParentTop="true"
   	    android:layout_toLeftOf="@+id/socialShareButton"
   	    android:background="#000000"
   	    android:drawablePadding="10dp"
   	    android:drawableTop="@drawable/dark_location_map"
   	    android:text="Map Meetings"
   	    android:textColor="#DDDDDD"
   	    android:textSize="18dip" 
   	       android:layout_alignParentLeft="true"
   	       android:layout_marginRight="20dip"/>

   	<Button
   	    android:id="@+id/createButton"
   	    android:layout_width="150dip"
   	    android:layout_height="wrap_content"
   	    android:layout_alignLeft="@+id/socialShareButton"
   	    android:layout_alignParentTop="true"
   	    android:background="#000000"
   	    android:drawablePadding="10dip"
   	    android:drawableTop="@drawable/dark_social_add_group"
   	    android:focusable="true"
   	    android:text="Create Meetings"
   	    android:textColor="#DDDDDD"
   	    android:textSize="18dip" />

   	<Button
   	    android:id="@+id/favoritesButton"
   	    android:layout_width="150dip"
   	    android:layout_height="wrap_content"
   	    android:layout_centerHorizontal="true"
		android:layout_below="@+id/editDeleteButton"
   	    android:background="#000000"
   	    android:drawablePadding="10dp"
   	    android:drawableTop="@drawable/dark_rating_favorite"
   	    android:focusable="true"
   	    android:paddingRight="10dip"
   	    android:paddingTop="29dip"
   	    android:text="Favorites"
   	    android:textColor="#DDDDDD"
   	    android:textSize="18dip" />

   	<Button
   	    android:id="@+id/socialShareButton"
   	    android:layout_width="150dip"
   	    android:layout_height="wrap_content"
   	    android:layout_alignBaseline="@+id/editDeleteButton"
   	    android:layout_alignBottom="@+id/editDeleteButton"
   	    android:layout_alignParentRight="true"
   	    android:background="#000000"
   	    android:drawablePadding="10dp"
   	    android:drawableTop="@drawable/dark_social_share"
   	    android:focusable="true"
   	    android:paddingRight="10dip"
   	    android:paddingTop="29dip"
   	    android:text="Share App"
   	    android:textColor="#DDDDDD"
   	    android:textSize="18dip" />

</RelativeLayout>
</LinearLayout>
</ScrollView>